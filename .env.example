# Server
PORT=3000
NODE_ENV=development

# MySQL (Hostinger)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DB_CONNECTION_LIMIT=10

# Auth
JWT_SECRET=change-me
JWT_EXPIRES_IN=1d
PASSWORD_SALT_ROUNDS=10

# Logging
LOG_LEVEL=info

# Uploads
UPLOADS_ROOT=/var/www/uploads
